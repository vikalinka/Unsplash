<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unsplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_color_primary</item>
        <item name="colorPrimaryVariant">@color/custom_color_primary_dark</item>
        <item name="colorOnPrimary">@color/custom_color_text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_color_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_color_secondary_dark</item>
        <item name="colorOnSecondary">@color/custom_color_text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:listDivider">@drawable/divider</item>-->
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/custom_color_primary</item>
        <item name="android:elevation">8dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/PopupTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationStyle</item>
    </style>

    <style name="ToolbarNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/custom_color_secondary</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
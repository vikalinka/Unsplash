<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unsplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_color_primary</item>
        <item name="colorPrimaryVariant">@color/custom_color_primary_dark</item>
        <item name="colorOnPrimary">@color/custom_color_text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_color_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_color_secondary_dark</item>
        <item name="colorOnSecondary">@color/custom_color_text_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>